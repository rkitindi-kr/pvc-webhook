# ----------- Build Stage -----------
FROM golang:1.24.0 AS builder

WORKDIR /workspace

# Cache dependencies first
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build the controller binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -o controller ./oneagent-controller.go

# ----------- Runtime Stage -----------
FROM gcr.io/distroless/base-debian12:nonroot

WORKDIR /

# Copy binary into PATH
COPY --from=builder /workspace/controller /usr/local/bin/controller

# Ensure TLS certs are available (for Kubernetes API calls)
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/

USER nonroot:nonroot

ENTRYPOINT ["controller"]

